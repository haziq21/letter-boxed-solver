---
import "../styles/global.css";
import GithubIcon from "../components/GithubIcon.astro";
import SolutionList from "../components/SolutionList.svelte";
import { getAllSolutions, getAllSides } from "../repo";

const [allSols, allSides] = await Promise.all([getAllSolutions(), getAllSides()]);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Letter unBoxed</title>
  </head>
  <body
    class="font-franklin bg-white flex flex-col h-[100vh] md:grid md:grid-cols-[27rem_1fr] md:grid-rows-[min-content_1fr]"
  >
    <header class="px-8 md:px-10 py-6 md:py-8 h-min">
      <div class="flex justify-between items-baseline mb-2">
        <h1 class="font-karnak text-2xl md:text-3xl">Letter unBoxed</h1>
        <a href="https://github.com/haziq21/letter-unboxed"><GithubIcon /></a>
      </div>
      <p class="text-sm md:text-base">
        A computed archive of every accepted 2-word solution for the New York Times'
        <a href="https://www.nytimes.com/puzzles/letter-boxed" class="underline">Letter Boxed</a>.
      </p>
    </header>

    <div class="bg-rose-300 min-h-90 md:row-span-2 md:h-full"></div>

    <main class="flex-1 min-h-0">
      <SolutionList client:load solutions={allSols} class="flex flex-col max-h-full" />
    </main>
  </body>
</html>
